---
import BaseLayout from "../layouts/BaseLayout.astro";
import Toggle from "../components/Toggle.astro";
import Counter from "../components/Counter.astro";
import FullWidthBanner from "../components/FullWidthBanner.astro";
import RoadDetails from "../components/RoadDetails.astro";
import GlitchImageBanner from "../components/GlitchImageBanner.astro";
import ScrollingHeader from "../components/ScrollingHeader.astro";
import StravaPopupButton from "../components/StravaPopupButton.astro";
import alpe from "../assets/img/alpe-nicht.jpg";

const pageTitle = "Coig - product website boilerplate";
---

<style>
  .centered-counter {
    position: absolute;
    top: 85%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 2;
    text-align: center;
    width: 100%;
  }

  /* Na małych ekranach – zmniejsz top */
  @media screen and (max-width: 636px) {
    .centered-counter {
      top: 65%;
    }
  }
  .hero-wrapper {
  position: relative;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
  background-color: black;
}

/* Zastępuje ::before */
.hero-bg {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  filter: grayscale(1) sepia(0.5) brightness(0.8);
  animation: zoomPan 20s infinite alternate ease-in-out;
  z-index: 0;
}

/* Zastępuje ::after */
.hero-overlay {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.3);
  z-index: 1;
}

/* Treść */
.centered-counter {
  position: relative;
  z-index: 2;
}


  .description-paragraph {
    font-size: 1rem;
    color: #f4e9c3;
    font-family: "Raleway", sans-serif;
    text-align: center;
    margin-top: 1rem;
    animation: distortionSkew 1s alternate ease-in-out;
  }

  @keyframes zoomPan {
    0% {
      transform: scale(1) translate(0, 0);
    }
    25% {
      transform: scale(1.05) translate(1%, -1%);
    }
    50% {
      transform: scale(1.1) translate(-1%, 1%);
    }
    75% {
      transform: scale(1.05) translate(0.5%, -0.5%);
    }
    100% {
      transform: scale(1) translate(0, 0);
    }
  }

  @keyframes distortionSkew {
    0% {
      transform: skew(0deg, 0deg);
      filter: blur(20px);
    }
    100% {
      transform: skew(3deg, -1deg);
      filter: blur(5px);
    }
  }
</style>

<BaseLayout>
  <div class="hero-wrapper">
    <img src={alpe.src} alt="" class="hero-bg" loading="lazy" decoding="async" />
    <div class="hero-overlay"></div>
  
    <div class="centered-counter">
      <Toggle
        id="szczegoly-etapu"
        buttonLabel="O co chodzi?"
        buttonLabelAlt="ok"
      >
        <div class="description-paragraph">
          <p>
            O doświadczenia, relaks, ucieczkę i wyzwanie. O 555km przygodę z
            5800m przewyższenia
          </p>
          <p>
            O możliwość dołączenia do bandy ambitnych pasjonatów i zostawienia
            pieniędzy w miejscu, które tego potrzebuje
          </p>
        </div>
      </Toggle>
    </div>
  </div>
  
  
  <ScrollingHeader text="KOTLINA " />
  <Counter />

