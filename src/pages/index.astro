<style>
  .centered-counter {
    position: absolute;
    top: 75%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 2; /* nad t≈Çem i overlayem */
    text-align: center;
    width: 100%;
  }
  .hero-wrapper {
    position: relative;
    width: 100vw;
    height: 100vh;
    overflow: hidden;
    background-color: black;
  }

  .hero-wrapper::before {
    content: "";
    position: absolute;
    inset: 0;
    background-image: url("../assets/img/alpe-nicht.jpg");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    filter: grayscale(1) sepia(0.5) brightness(0.8);
    animation: zoomPan 20s infinite alternate ease-in-out;
    z-index: 0;
  }

  .hero-wrapper::after {
    content: "";
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.3);
    z-index: 1;
  }

  .description-paragraph {
    font-size: 1rem;
    color: #f4e9c3;
    font-family: "Raleway", sans-serif;
    text-align: center;
    margin-top: 1rem;
    animation: distortionSkew 1s alternate ease-in-out;
  } 

  @keyframes zoomPan {
    0% {
      transform: scale(1) translate(0, 0);
    }
    25% {
      transform: scale(1.05) translate(1%, -1%);
    }
    50% {
      transform: scale(1.1) translate(-1%, 1%);
    }
    75% {
      transform: scale(1.05) translate(0.5%, -0.5%);
    }
    100% {
      transform: scale(1) translate(0, 0);
    }
  }

  @keyframes distortionSkew {
    0% {
      transform: skew(0deg, 0deg);
      filter: blur(20px);
    }
    100% {
      transform: skew(3deg, -1deg);
      filter: blur(5px);
    }
  }
</style>

