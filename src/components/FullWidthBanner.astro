---
import StravaPopupButton from "./StravaPopupButton.astro";

const {
  headline,
  description,
  descriptionSecond,
  date,
  incline,
  url,
  descriptionThird,
  backgroundImageWebp,
  backgroundImageJpeg,
  mapID,
  height = "700px",
  id,
} = Astro.props;
---

<style>
  .banner {
    position: relative;
    width: 100%;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: #f4e9c3;
  }

  .banner picture,
  .banner picture img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
    display: block;
  }

  .banner::after {
    content: "";
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
    z-index: 1;
  }

  .banner-content {
    position: relative;
    z-index: 2;
    padding: 1rem;
    max-width: 800px;
  }

  .banner-content h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
  }

  .banner-content p {
    font-size: 1.2rem;
    margin-bottom: 1rem;
  }

  .banner-link {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: white;
    color: black;
    font-weight: bold;
    border-radius: 5px;
    text-decoration: none;
    transition: background 0.3s ease;
  }

  .banner-link:hover {
    background: #d3f8d3;
  }

  .banner-toggle-button {
    margin-top: 1rem;
    background: #ceeb99ba;
    color: #000;
    border: none;
    padding: 0.5rem 1rem;
    font-weight: bold;
    border-radius: 5px;
    cursor: pointer;
    z-index: 2;
    position: relative;
    transition: background 0.3s ease;
  }

  .banner-toggle-button:hover {
    background: #d3f8d3;
  }

  .banner-details {
    max-height: 0;
    overflow: hidden;
    transition:
      max-height 0.5s ease,
      opacity 0.5s ease;
    opacity: 0;
    margin-top: 0;
  }

  .date-paragraph {
    font-size: 0.9rem !important;
    margin-bottom: 0.5rem;
  }

  .banner-details.open {
    max-height: 500px; /* wystarczająco dużo, by pomieścić tekst */
    opacity: 1;
    margin-top: 1rem;
  }

  @media (max-width: 768px) {
    .banner-content h1 {
      font-size: 1.8rem;
    }

    .banner-details {
      margin-right: 20px;
      margin-left: 20px;
    }
    .banner-content p {
      font-size: 1rem;
    }
  }
</style>

<div class="banner" style={`min-height: ${height};`} id={id}>
  <picture>
    <source srcset={backgroundImageWebp} type="image/webp" />
    <img src={backgroundImageJpeg} alt="Tło banera" loading="lazy" />
  </picture>

  <div class="banner-content">
    <h1>{headline}</h1>
    <p>{description}</p>
    <p class="date-paragraph">{date}</p>
    <slot name="details" />
    <button class="banner-toggle-button" onclick={`toggleDetails('${id}')`}
      >Zobacz więcej</button
    >
    <div class="banner-details" id={`details-${id}`}>
      {descriptionSecond}
      <StravaPopupButton embedId={mapID} id={id} />
    </div>

    <p>{descriptionThird}</p>
  </div>
</div>

<script is:inline>
  function toggleDetails(id) {
    const details = document.getElementById(`details-${id}`);
    const button = details?.previousElementSibling;
    if (!details || !button) return;

    const isOpen = details.classList.contains("open");
    details.classList.toggle("open");

    button.textContent = isOpen ? "Zobacz więcej" : "Zobacz mniej";
  }
</script>
