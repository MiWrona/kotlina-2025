const { logoSrc = "/logo.svg", whatsappNumber = "1XXXXXXXXXX" } = Astro.props;
---

<style>
  footer {
    background-color: #333;
    color: #f4e9c3;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 2rem 1.5rem;
    flex-wrap: wrap;
    gap: 1rem;
    font-size: 0.9rem;
  }

  .footer-left {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .footer-logo img {
    height: 40px;
    object-fit: contain;
  }

  .whatsapp-link {
    color: #f4e9c3;
    text-decoration: none;
    font-weight: bold;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .whatsapp-link:hover {
    text-decoration: underline;
  }

  .footer-copy {
    text-align: center;
    width: 100%;
    opacity: 0.7;
    font-size: 0.8rem;
    margin-top: 1rem;
  }

  @media (max-width: 636px) {
    footer {
      flex-direction: column;
      text-align: center;
    }

    .footer-left {
      flex-direction: column;
    }
  }
</style>

