---
const { embedId = "3339199849723845918", id = "default" } = Astro.props;
---

<style>
  .overlay {
    position: fixed;
    top: 0; left: 0;
    width: 100vw; height: 100vh;
    background-color: rgba(0, 0, 0, 0.6);
    display: none;
    justify-content: center;
    align-items: center;
    z-index: 1000;
    padding: 2vh;
    box-sizing: border-box;
  }

  .overlay.show {
    display: flex;
  }

  .popup {
    position: relative;
    background: white;
    width: 75vw;
    max-height: 80vh;
    border-radius: 12px;
    padding: 20px;
    box-shadow: 0 0 30px rgba(0, 0, 0, 0.7);
    display: flex;
    flex-direction: column;
  }

  .popup button.close-btn {
    position: absolute;
    top: 10px; right: 10px;
    background: #fc5200;
    color: white;
    border: none;
    padding: 5px 10px;
    border-radius: 5px;
    cursor: pointer;
    z-index: 1001;
  }

  .strava-embed-placeholder {
    width: 100%;
    flex-grow: 1;
    height: 100%;
  }

  iframe {
    width: 100% !important;
    height: 100% !important;
    border: none;
    flex-grow: 1;
  }

  .button-map {
    background: #ff980052;
    color: #cacaca;
    border: none;
    padding: 0.5rem 1rem;
    font-weight: bold;
    border-radius: 5px;
    cursor: pointer;
    transition: background 0.3s ease;
    display: block;
    margin: 0 auto;
    margin-top: 15px;
  }
</style>

<button class="button-map" data-strava-button={id}>Zobacz trasÄ™</button>

<div class="overlay" data-strava-popup={id}>
  <div class="popup" data-strava-popup-content>
    <button class="close-btn" data-strava-close={id}>Zamknij</button>
    <div
      class="strava-embed-placeholder"
      data-embed-type="route"
      data-embed-id={embedId}
      data-units="metric"
      data-full-width="true"
      data-style="dark"
      data-terrain="3d"
      data-map-hash="7.95/50.039/18.664"
      data-from-embed="true"
    ></div>
  </div>
</div>

<script is:inline>
    document.addEventListener('DOMContentLoaded', () => {
      document.querySelectorAll('[data-strava-button]').forEach((btn) => {
        const id = btn.getAttribute('data-strava-button');
        const popup = document.querySelector(`[data-strava-popup="${id}"]`);
        const close = document.querySelector(`[data-strava-close="${id}"]`);
        const content = popup.querySelector('[data-strava-popup-content]');
        const counterWrapper = document.querySelector('.counter-wrapper');
  
        if (!popup || !close || !content) return;
  
        const isMobile = () => window.innerWidth < 768;
  
        const openPopup = () => {
          popup.classList.add('show');
          document.body.style.overflow = 'hidden';
          if (isMobile() && counterWrapper) {
            counterWrapper.classList.add('display-none');
          }
  
          const existingScript = document.querySelector('script[src="https://strava-embeds.com/embed.js"]');
          if (!existingScript) {
            const script = document.createElement('script');
            script.src = 'https://strava-embeds.com/embed.js';
            script.async = true;
            document.body.appendChild(script);
          } else if (window.StravaEmbedLoader) {
            window.StravaEmbedLoader.render();
          }
        };
  
        const closePopup = () => {
          popup.classList.remove('show');
          document.body.style.overflow = '';
          if (isMobile() && counterWrapper) {
            counterWrapper.classList.remove('display-none');
          }
        };
  
        btn.addEventListener('click', openPopup);
        close.addEventListener('click', closePopup);
  
        popup.addEventListener('click', (e) => {
          if (!content.contains(e.target)) {
            closePopup();
          }
        });
  
        window.addEventListener('keydown', (e) => {
          if (e.key === 'Escape') {
            closePopup();
          }
        });
      });
    });
  </script>
  